---
import { Card, CardTitle, CardHeader, CardContent, CardDescription, CardFooter } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Textarea } from "@/components/ui/textarea";
import { Label } from "@/components/ui/label";
import Header from "../../../components/Header.astro";
import Footer from "../../../components/Footer.astro";
import BaseHead from "../../../components/BaseHead.astro";
import { SITE_TITLE, API, formatDate, STATUS_COLORS } from "../../../consts";

// Check if user is logged in and is a technician
const token = Astro.cookies.get("token")?.value;
const userRole = Astro.cookies.get("userRole")?.value;

if (!token || userRole !== "TECHNICIAN") {
  return Astro.redirect("/login");
}

// Get reservation ID from params
const { id } = Astro.params;

// Fetch reservation details
let reservation = null;
let error = '';
let success = false;

try {
  const res = await fetch(`${import.meta.env.API_URL}${API.RESERVATIONS.BY_ID(Number(id))}`, {
    headers: {
      Authorization: `Bearer ${token}`,
    },
  });
  
  if (res.ok) {
    reservation = await res.json();
    
    // Check if reservation is in a valid state to complete (CONFIRMED or PROCESSING)
    if (!['CONFIRMED', 'PROCESSING'].includes(reservation.status)) {
      error = `Cannot complete this reservation. Current status: ${reservation.status}`;
    }
  } else {
    error = 'Reservation not found';
  }
} catch (e) {
  error = 'An error occurred while fetching the reservation';
  console.error(e);
}

// Handle form submission
if (Astro.request.method === 'POST' && !error) {
  try {
    const formData = await Astro.request.formData();
    const repairDescription = formData.get('repairDescription');
    
    const serviceData = {
      reservationId: Number(id),
      repairDescription,
    };
    
    const res = await fetch(`${import.meta.env.API_URL}${API.SERVICES.COMPLETE}`, {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        Authorization: `Bearer ${token}`,
      },
      body: JSON.stringify(serviceData),
    });

    if (res.ok) {
      success = true;
    } else {
      const errorData = await res.json();
      error = errorData.message || 'An error occurred while completing the service.';
    }
  } catch (e) {
    error = 'An unexpected error occurred. Please try again.';
    console.error(e);
  }
}
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`Complete Service | ${SITE_TITLE}`} description="Complete a service for a reservation" />
  </head>
  <body class="min-h-screen flex flex-col">
    <Header />
    <main class="container mx-auto px-4 py-8 flex-1">
      <div class="flex items-center mb-6">
        <a href="/services/pending" class="text-blue-500 hover:text-blue-700 mr-2">
          &larr; Back to Pending Services
        </a>
        <h1 class="text-3xl font-bold">Complete Service</h1>
      </div>
      
      <div class="max-w-3xl mx-auto">
        {error ? (
          <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded mb-6">
            <p>{error}</p>
            <div class="mt-4">
              <a href="/services/pending" class="text-red-700 underline">
                Return to pending services
              </a>
            </div>
          </div>
        ) : success ? (
          <div class="bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded mb-6">
            <p>Service completed successfully!</p>
            <div class="mt-4">
              <a href="/services" class="text-green-700 underline">View all services</a>
              <span class="mx-2">or</span>
              <a href="/services/pending" class="text-green-700 underline">Return to pending services</a>
            </div>
          </div>
        ) : (
          <Card>
            <CardHeader>
              <CardTitle>Complete Service</CardTitle>
              <CardDescription>
                Complete service for reservation #{id} - {reservation?.bike?.model || 'Unknown Bike'}
              </CardDescription>
            </CardHeader>
            <CardContent>
              <div class="space-y-4 mb-6">
                <div class="bg-gray-50 p-4 rounded-md">
                  <h3 class="font-medium">Reservation Details</h3>
                  <div class="grid grid-cols-2 gap-3 mt-2">
                    <div>
                      <p class="text-xs text-gray-500">Customer</p>
                      <p>{reservation?.customer?.name || 'Unknown'}</p>
                    </div>
                    <div>
                      <p class="text-xs text-gray-500">Bike</p>
                      <p>
                        {reservation?.bike?.model || 'Unknown'} 
                        ({reservation?.bike?.brand?.name || reservation?.bike?.brandOther || 'Unknown brand'})
                      </p>
                    </div>
                    <div>
                      <p class="text-xs text-gray-500">Reservation Date</p>
                      <p>{formatDate(reservation?.reservationDate)}</p>
                    </div>
                    <div>
                      <p class="text-xs text-gray-500">Status</p>
                      <p class={`inline-flex px-2 py-1 rounded-full text-xs ${STATUS_COLORS[reservation?.status] || 'bg-gray-100'}`}>
                        {reservation?.status}
                      </p>
                    </div>
                  </div>
                  
                  <h3 class="font-medium mt-4">Problem Description</h3>
                  <p class="mt-1 whitespace-pre-line">{reservation?.problemDescription}</p>
                </div>
                
                <form method="POST" class="space-y-4">
                  <div class="space-y-2">
                    <Label for="repairDescription">Repair Description</Label>
                    <Textarea 
                      id="repairDescription" 
                      name="repairDescription" 
                      placeholder="Describe the repairs performed..."
                      rows={5}
                      required
                    />
                    <p class="text-sm text-gray-500">
                      Provide detailed information about the service performed, parts replaced, and any notes for the customer.
                    </p>
                  </div>
                  
                  <div class="pt-4">
                    <Button type="submit" class="w-full">Complete Service</Button>
                    <p class="text-sm text-gray-500 text-center mt-2">
                      This will create a service record and mark the reservation as DONE.
                    </p>
                  </div>
                </form>
              </div>
            </CardContent>
          </Card>
        )}
      </div>
    </main>
    <Footer />
  </body>
</html>